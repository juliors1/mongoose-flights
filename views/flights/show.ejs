<%- include('../partials/head') %>
<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
</section>
<br><br><h2>Tickets</h2>
<form id="add-ticket-form" method="POST"
  action="/flights/<%= flight._id %>/tickets">
  <label>Seat:</label>
  <input name="seat"placeholder=" A-F 1-9 " required pattern="[A-F][1-9]\d?">
  <label>Price:</label>
  <select name="price">
    <option value="300">First Class: $300</option>
    <option value="250">Business Class: $250</option>
    <option value="100">Economy: $100</option>
  </select>
  <input type="submit" value="Add Ticket">
</form>

<% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(t) { %>
          <tr>
            <td><%= t.createdAt.toLocaleDateString() %></td>
            <td><%= t.seat %></td>
            <td><%= t.price %></td>
            <td>
                <form action="/flights/<%= t._id %>?_method=DELETE" class='delete-form' method="POST">
                    <button type='submit'>X</button>
                </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Tickets Yet</h5>
  <% } %>
<%- include('../partials/footer') %>